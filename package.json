  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/polyfill": "^7.8.7",
    "@babel/preset-env": "^7.9.5",
    "copyfiles": "^2.2.0",
    "pre-commit": "^1.2.2",
    "rollup": "^2.6.1",
    "rollup-plugin-babel": "^4.4.0",
    "terser": "^4.6.11"
